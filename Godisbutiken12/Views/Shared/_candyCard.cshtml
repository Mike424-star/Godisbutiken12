@model Godis

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@Model.ImageThumbnailUrl" alt="image for Candy" />
        <div class="caption">
            <h3 class="pull-right"> @Model.Price.ToString("c")</h3>
            <h2><a asp-controller="Godis" asp-action="Details" asp-route-id="@Model.GodisID"> @Model.Name</a></h2>
            <p>@Model.Description</p>
        </div>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary"
                   asp-controller="ShoppingCart"
                   asp-action="AddToShoppingCart"
                   asp-route-godisId="@Model.GodisID">Lägg till i kundvagn</a>
            </p>
        </div>
    </div>
</div>